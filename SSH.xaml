<UserControl x:Class="LKtunnel.SSH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="450" Height="350">
    <Grid>
        <TextBlock Text="SSH Configuration" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="18"/>

        <TextBlock Text="Host" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="SSHHost" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,50,0,0" Width="250"/>

        <TextBlock Text="Port" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <TextBox x:Name="SSHPort" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,90,0,0" Width="250"/>

        <TextBlock Text="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox x:Name="SSHUsername" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,130,0,0" Width="250"/>

        <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0"/>
        <PasswordBox x:Name="SSHPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,170,0,0" Width="250"/>

        <!-- Buttons -->
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,220,0,0" Width="100" Height="30" Click="Connect_Click"/>
        <Button x:Name="DisconnectButton" Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,220,0,0" Width="100" Height="30" Click="Disconnect_Click"/>

        <!-- New Browse Buttons for Save & Load Config -->
        <Button x:Name="SaveConfigButton" Content="Save Config" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,220,0,0" Width="100" Height="30" Click="SaveConfig_Click"/>
        <Button x:Name="LoadConfigButton" Content="Load Config" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="340,220,0,0" Width="100" Height="30" Click="LoadConfig_Click"/>
    </Grid>
</UserControl>
