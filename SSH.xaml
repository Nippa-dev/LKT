<UserControl x:Class="LKtunnel.SSH"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock Text="SSH Tunneling" FontSize="20"/>
        <TextBlock Text="SSH Host:"/>
        <TextBox Name="SSHHost" Width="300"/>

        <TextBlock Text="Port:"/>
        <TextBox Name="SSHPort" Width="100"/>

        <TextBlock Text="Username:"/>
        <TextBox Name="SSHUsername" Width="200"/>

        <TextBlock Text="Password:"/>
        <PasswordBox Name="SSHPassword" Width="200"/>

        <Button Content="Connect" Click="Connect_Click"/>
        <Button Content="Disconnect" Click="Disconnect_Click"/>
    </Grid>
</UserControl>
