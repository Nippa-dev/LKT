<UserControl x:Class="LKtunnel.SSH"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="SSH Tunneling" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10"/>

            <TextBlock Text="SSH Host:"/>
            <TextBox Name="SSHHost" Width="250" Margin="5"/>

            <TextBlock Text="Port:"/>
            <TextBox Name="SSHPort" Width="100" Margin="5"/>

            <TextBlock Text="Username:"/>
            <TextBox Name="SSHUsername" Width="250" Margin="5"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="SSHPassword" Width="250" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Connect" Width="120" Height="40" Margin="5" Click="Connect_Click"/>
                <Button Content="Disconnect" Width="120" Height="40" Margin="5" Click="Disconnect_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
