<Window x:Class="LKtunnel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LKtunnel - VPN Client" Height="400" Width="600" WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip">
    <Grid>
        <!-- Main Content Section -->
        <StackPanel VerticalAlignment="Top">
            <!-- ComboBox to select protocol -->
            <ComboBox Name="ProtocolComboBox" Width="200" Margin="10" SelectionChanged="ProtocolComboBox_SelectionChanged">
                <ComboBoxItem Content="OpenVPN" />
                <ComboBoxItem Content="WireGuard" />
                <ComboBoxItem Content="Shadowsocks" />
                <ComboBoxItem Content="V2Ray" />
                <ComboBoxItem Content="SSH Tunneling" />
            </ComboBox>
            <Button x:Name="ToggleThemeButton" Content="Toggle Dark Mode" Click="ToggleTheme_Click" Height="30" Width="182"/>

            <!-- Other Buttons for Theme and Navigation -->
            <Button Name="DashboardButton" Content="Dashboard" Click="Dashboard_Click" Height="41" Width="102"/>
            <Button x:Name="LogsButton" Content="Logs" Click="Logs_Click" Height="33" Width="124"/>
        </StackPanel>

        <!-- Main content for each protocol -->
        <ContentControl x:Name="MainContent" Margin="0,138,0,0"/>
    </Grid>
</Window>
