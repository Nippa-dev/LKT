<Window x:Class="LKtunnel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LKtunnel" Height="500" Width="800">
    <Grid>
        <!-- Connect/Disconnect Button -->
        <Button x:Name="ConnectDisconnectButton" Content="Connect VPN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Click="ConnectDisconnectButton_Click" Margin="10,10,0,0"/>

        <!-- Dashboard Button -->
        <Button x:Name="DashboardButton" Content="Dashboard" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Click="DashboardButton_Click" Margin="120,10,0,0"/>

        <!-- Dark/Light Mode Toggle Switch -->
        <ToggleButton x:Name="DarkModeToggleButton" Content="Dark Mode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="230,10,0,0" Checked="DarkModeToggleButton_Checked" Unchecked="DarkModeToggleButton_Unchecked"/>

        <!-- Protocol ComboBox (Example for selection) -->
        <ComboBox x:Name="ProtocolComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="340,10,0,0" SelectionChanged="ProtocolComboBox_SelectionChanged">
            <ComboBoxItem Content="OpenVPN"/>
            <ComboBoxItem Content="WireGuard"/>
            <ComboBoxItem Content="Shadowsocks"/>
            <ComboBoxItem Content="V2Ray"/>
            <ComboBoxItem Content="SSH Tunneling"/>
        </ComboBox>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,50,0,0"/>

        <!-- Logs Section (always visible) -->
        <TextBox x:Name="LogsTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,0,0,10" Height="100" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextChanged="LogsTextBox_TextChanged"/>
        
    </Grid>
</Window>
